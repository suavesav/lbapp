See this page for more XML attribute options
https://developers.google.com/maps/documentation/android/map#using_xml_attributes
-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="#ffc6c6c6">



        <fragment
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.google.android.gms.maps.SupportMapFragment"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Distance"
                android:layout_alignParentTop="true"
                android:id="@+id/distance"
                android:background="#96c1c1c1" android:textColor="#ffd41927" android:textStyle="bold"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/speed"
                android:layout_alignLeft="@id/map" android:layout_alignParentBottom="true"
                android:background="#96c1c1c1" android:textColor="#ffd41927" android:textStyle="bold"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_alignRight="@id/map"
                android:id="@+id/battery" android:layout_alignParentBottom="true" android:background="#96c1c1c1"
                android:textColor="#ffd41927" android:textStyle="bold"/>

</RelativeLayout>